@model ProgPoeFarmer31May.Models.User

@{
    ViewData["Title"] = "Login";
}

<style>
    body {
        font-family: Arial, sans-serif;
        background-color: #f2f9f2; /* Light green background color */
        text-align: center;
    }

    h1 {
        font-size: 2.5em;
        color: #2e7d32; /* Dark green heading color */
    }

    h4 {
        font-size: 1.5em;
        color: #4caf50; /* Light green heading color */
    }

    .form-control {
        width: 100%;
        padding: 10px;
        margin: 5px 0;
        box-sizing: border-box;
        border: 1px solid #ccc;
        border-radius: 5px;
    }

    .btn-primary {
        background-color: #4caf50; /* Light green button color */
        color: #fff;
        padding: 10px 20px;
        border: none;
        border-radius: 5px;
        cursor: pointer;
    }

        .btn-primary:hover {
            background-color: #388e3c; /* Darker green on hover */
        }

    a {
        color: #4caf50; /* Light green link color */
        text-decoration: none;
        margin-top: 10px;
        display: inline-block;
    }
</style>

<h1>Login</h1>

<h4>User</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Login">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <div class="form-group">
                <label asp-for="Username1" class="control-label">Username</label>
                <input asp-for="Username1" class="form-control" />
                <span asp-validation-for="Username1" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Password1" class="control-label">Password</label>
                <input asp-for="Password1" class="form-control" />
                <span asp-validation-for="Password1" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Login" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-controller="Accounts" asp-action="Create">Create an account</a>
</div>

<div>
    <a asp-controller="Accounts" asp-action="AdminLogin">Admin login</a>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}


@model ProgPoeFarmer31May.Models.Product

@{
    ViewData["Title"] = "Delete";
}

<style>
    body {
        font-family: Arial, sans-serif;
        background-color: #f2f9f2; /* Light green background color */
        text-align: center;
    }

    h1 {
        font-size: 2.5em;
        color: #2e7d32; /* Dark green heading color */
    }

    h3 {
        font-size: 1.5em;
        color: #4caf50; /* Light green heading color */
    }

    .row::after {
        content: "";
        clear: both;
        display: table;
    }

    .col-sm-2 {
        float: left;
        width: 16.66%; /* For 6 columns in a row */
        margin-top: 10px;
    }

    .col-sm-10 {
        float: left;
        width: 83.33%; /* For 6 columns in a row */
        margin-top: 10px;
    }

    .btn {
        background-color: #f44336; /* Red button color */
        color: white;
        padding: 6px 12px;
        border: none;
        border-radius: 5px;
        text-align: center;
        display: inline-block;
        margin-top: 10px;
        cursor: pointer;
        text-decoration: none;
    }

        .btn:hover {
            background-color: #d32f2f; /* Darker red on hover */
        }

    a {
        color: #4caf50; /* Light green link color */
        text-decoration: none;
    }

        a:hover {
            text-decoration: underline;
        }
</style>

<h1>Delete</h1>

<h3>Are you sure you want to delete?</h3>

<p>@ViewBag.Error</p>
<form asp-action="Delete">
    <input type="submit" value="Delete" class="btn btn-danger" /> |
    <a asp-action="List">Back to List</a>
</form>
</div>

@model ProgPoeFarmer31May.Models.User

@{
    ViewData["Title"] = "UserDelete";
}
<style>
    body {
        font-family: Arial, sans-serif;
        background-color: #f2f9f2; /* Light green background color */
        text-align: center;
    }

    h1 {
        font-size: 2.5em;
        color: #2e7d32; /* Dark green heading color */
    }

    h4 {
        font-size: 1.5em;
        color: #4caf50; /* Light green heading color */
    }

    .row::after {
        content: "";
        clear: both;
        display: table;
    }

    .col-md-4 {
        float: left;
        width: 30%; /* Adjust column width as needed */
        margin-top: 10px;
    }

    .form-group {
        margin-bottom: 15px;
    }

    label {
        color: #4caf50; /* Light green label color */
    }

    input[type="text"],
    input[type="password"] {
        width: 100%;
        padding: 8px;
        border: 1px solid #4caf50; /* Light green border color */
        border-radius: 5px;
        box-sizing: border-box;
        margin-top: 5px;
    }

    .btn {
        background-color: #4caf50; /* Light green button color */
        color: white;
        padding: 6px 12px;
        border: none;
        border-radius: 5px;
        text-align: center;
        display: inline-block;
        margin-top: 10px;
        cursor: pointer;
        text-decoration: none;
    }

        .btn:hover {
            background-color: #388e3c; /* Darker green on hover */
        }

    a {
        color: #4caf50; /* Light green link color */
        text-decoration: none;
    }

        a:hover {
            text-decoration: underline;
        }
</style>

<h1>UserDelete</h1>

<h3>Are you sure you want to delete this?</h3>
<div>
   
    
    <form asp-action="UserDelete">
        <input type="submit" value="UserDelete" class="btn btn-danger" /> |
        <a asp-action="UserList">Back to List</a>
    </form>
</div>

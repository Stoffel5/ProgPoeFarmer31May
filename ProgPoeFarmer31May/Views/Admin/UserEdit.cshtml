@model ProgPoeFarmer31May.Models.User

@{
    ViewData["Title"] = "UserEdit";
}

<style>
    body {
        font-family: Arial, sans-serif;
        background-color: #f2f9f2; /* Light green background color */
        text-align: center;
    }

    h1 {
        font-size: 2.5em;
        color: #2e7d32; /* Dark green heading color */
    }

    h4 {
        font-size: 1.5em;
        color: #4caf50; /* Light green heading color */
    }

    .row::after {
        content: "";
        clear: both;
        display: table;
    }

    .col-md-4 {
        float: left;
        width: 30%; /* Adjust column width as needed */
        margin-top: 10px;
    }

    .form-group {
        margin-bottom: 15px;
    }

    label {
        color: #4caf50; /* Light green label color */
    }

    input[type="text"],
    input[type="password"] {
        width: 100%;
        padding: 8px;
        border: 1px solid #4caf50; /* Light green border color */
        border-radius: 5px;
        box-sizing: border-box;
        margin-top: 5px;
    }

    .btn {
        background-color: #4caf50; /* Light green button color */
        color: white;
        padding: 6px 12px;
        border: none;
        border-radius: 5px;
        text-align: center;
        display: inline-block;
        margin-top: 10px;
        cursor: pointer;
        text-decoration: none;
    }

        .btn:hover {
            background-color: #388e3c; /* Darker green on hover */
        }

    a {
        color: #4caf50; /* Light green link color */
        text-decoration: none;
    }

        a:hover {
            text-decoration: underline;
        }
</style>

<h1>UserEdit</h1>

<h4>User</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="UserEdit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Username1" class="control-label">Username</label>
                <input asp-for="Username1" class="form-control" />
                <span asp-validation-for="Username1" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Password1" class="control-label">Password</label>
                <input asp-for="Password1" class="form-control" />
                <span asp-validation-for="Password1" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Admin1" class="control-label">Admin</label>
                <select asp-for="Admin1" class="form-control">
                    <option value="Y">Y</option>
                    <option value="N">N</option>
                </select>
                <span asp-validation-for="Admin1" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="UserEdit" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="UserList">Back to List</a>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}

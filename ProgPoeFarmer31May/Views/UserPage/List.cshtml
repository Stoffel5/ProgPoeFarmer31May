@model IEnumerable<ProgPoeFarmer31May.Models.Product>

    @{
        ViewData["Title"] = "Product List";
    }

    <style>
        body {
            font-family: Arial, sans-serif;
            background-color: #f2f9f2; /* Light green background color */
            text-align: center;
        }

        h1 {
            font-size: 2.5em;
            color: #2e7d32; /* Dark green heading color */
        }

        table {
            width: 100%;
            border-collapse: collapse;
            margin-top: 20px;
        }

        th, td {
            border: 1px solid #4caf50; /* Light green border color */
            padding: 8px;
            text-align: left;
        }

        th {
            background-color: #4caf50; /* Light green header background color */
        color: #4caf50;
        }

        td {
            background-color: #f2f9f2; /* Light green table row background color */
        }

        a {
            color: #4caf50; /* Light green link color */
            text-decoration: none;
        }

            a:hover {
                text-decoration: underline;
            }

        .btn {
            background-color: #4caf50; /* Light green button color */
            color: white;
            padding: 6px 12px;
            border: none;
            border-radius: 5px;
            text-align: center;
            display: inline-block;
            margin-top: 10px;
        }

            .btn:hover {
                background-color: #388e3c; /* Darker green on hover */
            }
    </style>
     <form asp-action="Logout">
    <div class="form-group">
        <input type="submit" value="Logout" class="btn btn-primary" />
    </div>
</form>

    <h1>Product List</h1>


    <p>
        <a asp-controller="UserPage" asp-action="Create" class="btn">Create New</a>
    </p>

    <table class="table">
        <thead>
            <tr>
                <th>
                    Product ID
                </th>
                <th>
                    Username
                </th>
                <th>
                    Name
                </th>
                <th>
                    Category
                </th>
                <th>
                    Production Date
                </th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.ProductID1)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Username1)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Name1)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Category1)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.ProductionDate1)
                    </td>
                    <td>
                        @Html.ActionLink("Edit", "Edit", new { id = item.ProductID1 }) |
                        @Html.ActionLink("Delete", "Delete", new { id = item.ProductID1 })
                    </td>
                </tr>
            }
        </tbody>
    </table>
